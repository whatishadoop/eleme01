border-1px($color)  //定义一个函数 设置一个css 样式区域块来替代边线
  position: relative
  &:after           //伪类定义
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")  //默认选择2x
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3) //根据条件自动切换为3x
    background-image: url($url + "@3x.png")